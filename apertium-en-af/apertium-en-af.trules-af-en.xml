<?xml version="1.0" encoding="ISO-8859-1"?> <!-- -*- nxml -*- -->
<transfer>
  <section-def-cats>
    <def-cat n="nom">
      <cat-item tags="n.*"/>
      <cat-item tags="np.*"/>
    </def-cat>
    <def-cat n="sent">
      <cat-item tags="sent"/>
    </def-cat>
    <def-cat n="det">
      <cat-item tags="det.ind.*"/>
      <cat-item tags="det.def.*"/>
    </def-cat>
    <def-cat n="prpers">
      <cat-item lemma="prpers" tags="prn.*"/>
    </def-cat>
    <def-cat n="verbnm"><!--verb no modal -->
      <cat-item tags="vblex.*"/>
      <cat-item tags="vbser.*"/>
      <cat-item tags="vbhaver.*"/> 
    </def-cat>
    <def-cat n="prep"> <!-- preposition -->
      <cat-item tags="pr"/>
    </def-cat>
  </section-def-cats>

  <section-def-attrs>
    <def-attr n="nbr">			<!-- Number -->
      <attr-item tags="sg"/>
      <attr-item tags="pl"/>
      <attr-item tags="sp"/>
    </def-attr>
    <def-attr n="gen">			<!-- Gender -->
      <attr-item tags="m"/>
      <attr-item tags="f"/>
      <attr-item tags="mf"/>
    </def-attr>
    <def-attr n="a_nom">
      <attr-item tags="n"/>
      <attr-item tags="n.acr"/>
      <attr-item tags="n.unc"/>
      <attr-item tags="np.loc"/>
    </def-attr>
    <def-attr n="a_det">
      <attr-item tags="det.ind"/>
      <attr-item tags="det.def"/>
    </def-attr>
    <def-attr n="tipus_prn">
      <attr-item tags="prn.subj"/>
      <attr-item tags="prn.obj"/>
    </def-attr>
    <def-attr n="pers">			<!-- Person -->
       <attr-item tags="p1"/>
       <attr-item tags="p2"/>
       <attr-item tags="p3"/>
    </def-attr>
    <def-attr n="a_verb">
       <attr-item tags="vblex"/>
       <attr-item tags="vbser"/>
       <attr-item tags="vbhaver"/>
       <attr-item tags="vbmod"/>
       <attr-item tags="vaux"/>
    </def-attr>
    <def-attr n="temps">
       <attr-item tags="pii"/>
       <attr-item tags="pis"/>
       <attr-item tags="pri"/>
       <attr-item tags="past"/>
       <attr-item tags="pres"/>
     </def-attr>
  </section-def-attrs>

  <section-def-vars>
    <def-var n="nombre"/>
    <def-var n="genere"/>
  </section-def-vars>

  <section-rules>
    <rule>
      <pattern>
        <pattern-item n="verbnm"/>
      </pattern>
      <action>
            <out>
              <lu>
                <clip pos="1" side="tl" part="lem"/>
    	        <clip pos="1" side="tl" part="a_verb"/>
    	        <clip pos="1" side="tl" part="temps"/>
              </lu>
            </out>
      </action>
    </rule>

    <rule>
      <pattern>
	<pattern-item n="prpers"/>
        <pattern-item n="verbnm"/>
      </pattern>
      <action>
        <choose>
          <when>
            <test>
	      <and>
                <equal>
		  <clip pos="1" side="tl" part="pers"/>
		  <lit-tag v="p3"/>
                </equal>
		<equal>
		  <clip pos="2" side="tl" part="temps"/>
		  <lit-tag v="pres"/>
  	        </equal>
	      </and>
	    </test>
	    <out>
              <lu>
	        <clip pos="1" side="tl" part="lem"/>
	        <clip pos="1" side="tl" part="tipus_prn"/>
	        <clip pos="1" side="tl" part="pers"/>
	        <clip pos="1" side="tl" part="gen"/>
	        <clip pos="1" side="tl" part="nbr"/>
		<lit v="$ ^"/>
                <clip pos="2" side="tl" part="lem"/>
    	        <clip pos="2" side="tl" part="a_verb"/>
		<lit-tag v="pri"/>
    	        <clip pos="2" side="tl" part="pers"/>
    	        <clip pos="2" side="tl" part="nbr"/>
	      </lu>
	    </out>
	  </when>

	  <otherwise> 
            <out>
              <lu>
                <clip pos="1" side="tl" part="lem"/>
	        <clip pos="1" side="tl" part="tipus_prn"/>
	        <clip pos="1" side="tl" part="pers"/>
	        <clip pos="1" side="tl" part="gen"/>
	        <clip pos="1" side="tl" part="nbr"/>
		<lit v="$ ^"/>
                <clip pos="2" side="tl" part="lem"/>
    	        <clip pos="2" side="tl" part="a_verb"/>
    	        <clip pos="2" side="tl" part="temps"/>
              </lu>
            </out>
	  </otherwise>
	</choose>
      </action>
    </rule>


    <rule> <!-- REGLA: reset variables-->
      <pattern>
        <pattern-item n="sent"/>
      </pattern>
      <action>
       <let>
         <var n="nombre"/>
         <lit-tag v="sg"/>
       </let>
       <let>
         <var n="genere"/>
         <lit-tag v="m"/>
       </let>
       <out>
         <lu>
           <clip pos="1" side="tl" part="whole"/>
         </lu>
       </out>
     </action>
   </rule>

  </section-rules>

</transfer>
