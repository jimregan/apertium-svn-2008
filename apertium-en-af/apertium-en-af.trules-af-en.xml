    <rule> <!-- In <PRN><VBLEX> constructions, propagate the person / number of
                the personal pronoun to the verb. -->
      <pattern>
	<pattern-item n="prpers"/>
        <pattern-item n="verbnm"/>
      </pattern>
      <action>
        <choose>
          <when>
            <test>     <!-- If it is third person singular in the present tense -->
	      <and>
                <equal> 
		  <clip pos="1" side="tl" part="pers"/>
		  <lit-tag v="p3"/>
                </equal>
		<equal>
		  <clip pos="2" side="tl" part="temps"/>
		  <lit-tag v="pres"/>
  	        </equal>
		<equal>
		  <clip pos="1" side="tl" part="nbr"/>
		  <lit-tag v="sg"/>
  	        </equal>
	      </and>
	    </test>
	    <out>
              <lu>
	        <clip pos="1" side="tl" part="lem"/>		<!-- Pronoun -->
	        <clip pos="1" side="tl" part="tipus_prn"/>
	        <clip pos="1" side="tl" part="pers"/>
	        <clip pos="1" side="tl" part="gen"/>
	        <clip pos="1" side="tl" part="nbr"/>
		<lit v="$ ^"/>
                <clip pos="2" side="tl" part="lem"/>		<!-- Verb -->
    	        <clip pos="2" side="tl" part="a_verb"/>
		<lit-tag v="pri"/>
    	        <clip pos="1" side="tl" part="pers"/>
    	        <clip pos="1" side="tl" part="nbr"/>
	      </lu>
	    </out>
	  </when>
          <when>
	    <test>
              <equal>
                <clip pos="2" side="tl" part="temps"/>
		<lit-tag v="pri"/>
	      </equal>
	    </test>
            <out>
              <lu>
                <clip pos="1" side="tl" part="lem"/>
	        <clip pos="1" side="tl" part="tipus_prn"/>
	        <clip pos="1" side="tl" part="pers"/>
	        <clip pos="1" side="tl" part="gen"/>
	        <clip pos="1" side="tl" part="nbr"/>
		<lit v="$ ^"/>
                <clip pos="2" side="tl" part="lem"/>
    	        <clip pos="2" side="tl" part="a_verb"/>
	        <lit-tag v="pres"/>
              </lu>
            </out>
	  </when>
	  <otherwise> 
            <out>
              <lu>
                <clip pos="1" side="tl" part="lem"/>
	        <clip pos="1" side="tl" part="tipus_prn"/>
	        <clip pos="1" side="tl" part="pers"/>
	        <clip pos="1" side="tl" part="gen"/>
	        <clip pos="1" side="tl" part="nbr"/>
		<lit v="$ ^"/>
                <clip pos="2" side="tl" part="lem"/>
    	        <clip pos="2" side="tl" part="a_verb"/>
    	        <clip pos="2" side="tl" part="temps"/>
              </lu>
            </out>
	  </otherwise>
	</choose>
      </action>
    </rule>

    <rule> <!-- In <ADV><VBSER><DET> constructions, propagate the number of the
                determiner to the verb. -->
      <pattern>
        <pattern-item n="adv"/>
        <pattern-item n="verbnm"/>
        <pattern-item n="det"/>
      </pattern>
      <action>
        <choose>
	  <when>
	    <test> <!-- When the determiner is singular -->
	      <equal>
                <clip pos="3" side="tl" part="nbr"/>
                <lit-tag v="sg"/>
	      </equal>
	    </test>
	    <out>
              <lu>
                <clip pos="1" side="tl" part="lem"/> <!-- Adverb -->
		<lit-tag v="adv"/>
		<lit v="$ ^"/>
                <clip pos="2" side="tl" part="lem"/> <!-- Verb -->
		<clip pos="2" side="tl" part="a_verb"/>
		<clip pos="2" side="tl" part="temps"/>
		<lit-tag v="p3"/>
    	        <clip pos="3" side="tl" part="nbr"/>
		<lit v="$ ^"/>
		<clip pos="3" side="tl" part="lem"/> <!-- Determiner -->
	        <clip pos="3" side="tl" part="a_det"/>
		<clip pos="3" side="tl" part="nbr"/>
	      </lu>
	    </out>
	  </when>
          <otherwise>
	    <out>
              <lu>
                <clip pos="1" side="tl" part="lem"/> <!-- Adverb -->
		<lit-tag v="adv"/>
                <clip pos="2" side="tl" part="lem"/> <!-- Verb -->
		<clip pos="2" side="tl" part="a_verb"/>
		<clip pos="2" side="tl" part="temps"/>
		<lit v="$ ^"/>
		<clip pos="3" side="tl" part="lem"/> <!-- Determiner -->
	        <clip pos="3" side="tl" part="a_det"/>
		<clip pos="3" side="tl" part="nbr"/>
              </lu>
	    </out>
	  </otherwise>
        </choose>
      </action>
    </rule>

    <rule>  <!-- "nie" at the end of a sentence - remove it. -->
      <pattern>
        <pattern-item n="adv"/>
        <pattern-item n="send_punct"/>
      </pattern>
      <action>
        <choose>
        <when>
          <test>
	    <equal>
              <clip pos="1" side="sl" part="lem"/>
              <lit v="nie"/>
	    </equal>
	  </test>
	  <out>
            <lu>
	      <clip pos="2" side="tl" part="whole"/>
	    </lu>
	  </out>
	</when>
	<otherwise>
	  <out>
	    <lu>
              <clip pos="1" side="tl" part="whole"/>
	      <lit v="$ ^"/> 
	      <clip pos="2" side="tl" part="whole"/>
	    </lu>
	  </out>
	</otherwise>
	</choose>
      </action>
    </rule>

    <rule> <!-- REGLA: reset variables-->
      <pattern>
        <pattern-item n="sent"/>
      </pattern>
      <action>
       <let>
         <var n="nombre"/>
         <lit-tag v="sg"/>
       </let>
       <let>
         <var n="genere"/>
         <lit-tag v="m"/>
       </let>
       <out>
         <lu>
           <clip pos="1" side="tl" part="whole"/>
         </lu>
       </out>
     </action>
   </rule>

  </section-rules>

</transfer>
